<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

  <changeSet id="v2" author="Ivan Fadeev">
    <preConditions onFail="MARK_RAN">
      <not>
        <tableExists tableName="roles"/>
      </not>
    </preConditions>

    <createTable tableName="roles">
      <column name="id" type="bigint">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="name" type="varchar(250)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="timestamp">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="add_auto_increment_for_roles" author="Ivan Fadeev">
    <preConditions onFail="MARK_RAN">
        <tableIsEmpty tableName="roles"/>
    </preConditions>

    <addAutoIncrement tableName="roles" columnName="id" incrementBy="1"/>
  </changeSet>

  <changeSet id="default_value_for_created_at_from_roles" author="Ivan Fadeev">
    <preConditions onFail="MARK_RAN">
      <tableIsEmpty tableName="roles"/>
    </preConditions>

    <addDefaultValue tableName="roles" columnName="created_at" defaultValueComputed="CURRENT_TIMESTAMP"/>
  </changeSet>


</databaseChangeLog>